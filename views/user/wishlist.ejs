<%- include('./includes/header.ejs') %>

<section class="cart_area mt-5">
  <div class="container">
    <h2>Wishlist</h2>
    <div class="cart_inner">
      <div class="table-responsive">
        <% if( products.length>0) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Add to Cart</th>
              <th scope="col">Remove</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(e=> { %>
            <tr>
              <td>
                <div class="media">
                  <div class="d-flex">
                    <img
                      height="100px"
                      width="100px"
                      src="productImages/<%=e.image%>"
                      alt=""
                    />
                  </div>
                  <div class="media-body">
                    <p><%=e.name%></p>
                  </div>
                </div>
              </td>
              <td>
                <h5>Rs.<span><%=e.price%></span></h5>
              </td>
              <td>
                <a
                  href="/cart/<%=e._id %>"
                  class="genric-btn primary medium text-dark"
                  >Add To Cart</a>
              </td>
              <td>
                <a
                  href="/removeWishlist/?id=<%=e._id%>"
                  class="genric-btn danger medium text-dark"
                  >Remove</a >
              </td>
            </tr>
            <tr></tr>
          </tbody>
        </table>
        <% }); %> 
     <% }else { %>
        <div class="container">
          <div class="row text-center">
            <div class="col-md-12 mt-5">
              <div>
                <img src="/productImages/3298067.jpg" alt="" width="50%" />
                <p style="color: red">You'r Wishlist Is Empty</p>
              </div>
              <div>
                <a class="btn btn-success my-3" href="/">Start Shopping</a>
              </div>
            </div>
          </div>
        </div>
        <% } %>

      </div>
    </div>
  </div>
</section>

<%- include('./includes/footer.ejs') %>
