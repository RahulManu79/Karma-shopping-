<%- include('./includes/header.ejs') %>


<div class="container padding-bottom-3x mb-2 mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10" style="margin-top: 130px;">
        <div class="forgot">
            
            <h2>Forgot your password?</h2>
        <p>Change your password in three easy steps. This will help you to secure your password!</p>
        <ol class="list-unstyled">
          <li><span class="text-primary text-medium">1. </span>Enter your Registerd Phonenumber below.</li>
          <li><span class="text-primary text-medium">2. </span>Our system will send you a OTP</li>
          <li><span class="text-primary text-medium">3. </span>Use the OTP to reset your password</li>
        </ol>

        </div>	
        
        <form class="card mt-4">
          <div class="card-body">
            <div class="form-group">
              <label for="email-for-pass">Enter your  Phonenumber</label>
              <input class="form-control" type="text" id="email-for-pass" required=""><small class="form-text text-muted">Enter the Phonenumber you used during the registration on Karmashopping.online Then we'll send a OTP to this Number.</small>
            </div>
          </div>
          <div class="card-footer">
            <button class="btn btn-success" type="submit">Get New Password</button>
           
          </div>
        </form>
        <a href="/login"><button class="btn btn-danger" >Back to Login </button></a>
      </div>
    </div>
  </div>

